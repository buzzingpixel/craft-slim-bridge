{
    "name": "buzzingpixel/craft-slim-bridge",
    "description": "Bridge for using Slim with Craft",
    "type": "craft-plugin",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "TJ Draper",
            "email": "tj@buzzingpixel.com",
            "homepage": "https://buzzingpixel.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "slim/psr7": "^1.5",
        "slim/slim": "^4.7"
    },
    "require-dev": {
        "codedungeon/phpunit-result-printer": "^0.31.0",
        "craftcms/cms": "^3.7",
        "doctrine/coding-standard": "^9",
        "friendsofphp/php-cs-fixer": "^2.18",
        "php-di/php-di": "^6.3",
        "phpstan/phpstan": "^1",
        "phpstan/phpstan-deprecation-rules": "^1",
        "phpstan/phpstan-strict-rules": "^1",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.5",
        "symfony/var-dumper": "^5.3",
        "vimeo/psalm": "^4.4"
    },
    "autoload": {
        "psr-4": {
            "BuzzingPixel\\SlimBridge\\": "src"
        }
    },
    "config": {
        "bin-compat": "full",
        "sort-packages": true,
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "craftcms/plugin-installer": true
        }
    },
    "extra": {
        "name": "Slim Bridge",
        "handle": "slim-bridge",
        "developer": "BuzzingPixel, LLC",
        "developerUrl": "https://buzzingpixel.com",
        "class": "BuzzingPixel\\SlimBridge\\SlimBridgePlugin"
    }
}
